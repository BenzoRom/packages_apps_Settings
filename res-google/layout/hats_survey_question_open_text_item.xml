<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.libraries.hats20.view.EditTextWithImeDone
        android:id="@id/hats_lib_survey_open_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/hats_open_text_border"
        android:fontFamily="roboto-regular"
        android:gravity="start|bottom|center"
        android:inputType="textAutoCorrect|textCapSentences"
        android:layout_marginLeft="@dimen/hats_lib_survey_horizontal_padding"
        android:layout_marginRight="@dimen/hats_lib_survey_horizontal_padding"
        android:lineSpacingMultiplier="1.25"
        android:minHeight="@dimen/hats_lib_open_text_input_min_height"
        android:minLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:textColor="#ff323232"
        android:textColorHint="#ff757575"
        android:textSize="16sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="roboto-regular"
        android:layout_marginLeft="@dimen/hats_lib_survey_horizontal_padding"
        android:layout_marginRight="@dimen/hats_lib_survey_horizontal_padding"
        android:layout_marginTop="8dp"
        android:text="@string/hats_lib_open_text_no_pii"
        android:textColor="#ff757575"
        android:textSize="12sp" />

</merge>
